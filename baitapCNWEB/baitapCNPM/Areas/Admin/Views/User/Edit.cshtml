@model baitapCNPM.Models.user

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Title_change{
    <title>Edit User</title>
}
<h2>Edit</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { enctype = "multipart/form-data", role = "form" }))
                        {
                            @Html.ValidationSummary(true)

                            <div class="form-group">
                                @Html.LabelFor(model => model.userID)
                                @Html.TextBoxFor(model => model.userID, new { placeholder = "Enter text", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.userID)

                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.username)
                                @Html.TextBoxFor(model => model.username, new { placeholder = "Enter text", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.username)

                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.password)
                                @Html.TextBoxFor(model => model.password, new { placeholder = "Enter text", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.password)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.lineAddress)
                                @Html.TextBoxFor(model => model.lineAddress, new { placeholder = "Enter text", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.lineAddress)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.phonenumber)
                                @Html.TextBoxFor(model => model.phonenumber, null, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.phonenumber)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.name)
                                @Html.TextBoxFor(model => model.name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.name)

                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.role_id)
                                @Html.TextBoxFor(model => model.role_id, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.role_id)

                            </div>



                            <button type="submit" class="btn btn-default">Lưu</button>

                        }
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>



<div>
    @Html.ActionLink("Back to List", "Index")
</div>


